@import "../index/index.wxss";
.content{
  background-color: #3A3A3A;
min-height: 736px;
}
.search{
  display: flex;
  flex-direction: row;
  padding-left: 20px;
  padding-top: 20px;
  font-size: 14px;
}
.search button{
  height: 60rpx;
  margin-left: 10px;
  line-height: 60rpx;
border-left: 0px;
background-color: #DD5E0E;
color: white;
text-shadow: black 0 1px 0;
}
.input{
  width: 70%;
  border: 1px solid #ccc;
  color: black;
  background-color: white;
}
.inputShow{
  padding-left: 20px;
  color: white;
  text-align: left;
  font-size: 13px;
  padding-top: 10px;
}
.btnClick:hover{
  background-color: palevioletred;
}